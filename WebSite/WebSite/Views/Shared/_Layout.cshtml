                </a>
            </li>
            <li>
                <a href="@Url.Action("Change", "Linguagem", new { LanguageAbbreviation = "en" })" title="List View" class="links">
                    <img alt="List View" src="@Url.Content("~/image/USA-Icon.png")">
                </a>
            </li>*@

                }
                @if (Session["AdmUser"] != null)
                {
                    <li class="nav-item nav-link m-3 active-1">
                        @Html.ActionLink(@CadastroLogin.Resources.GlobalResource.Portugues, "Change", "Linguagem", new { LanguageAbbreviation = "pt" }, null)
                    </li>
                    <li class="nav-item nav-link m-3 active-1">
                        @Html.ActionLink(@CadastroLogin.Resources.GlobalResource.Ingles, "Change", "Linguagem", new { LanguageAbbreviation = "en" }, null)
                    </li>
                    <li class="nav-item">
                        <a href="~/Home/ListarUsuarios" class="nav-link m-2 active-1">@CadastroLogin.Resources.GlobalResource.ListaUsuarios</a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Cursos/CadastrarCurso" class="nav-link m-2 active-1">@CadastroLogin.Resources.GlobalResource.CadastrarCurso</a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Authentication/Perfil" class="nav-link m-2 active-1">@CadastroLogin.Resources.GlobalResource.Perfil</a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Authentication/Logout" class="nav-link m-2 active-1">@CadastroLogin.Resources.GlobalResource.Sair</a>
                    </li>
                }

                @if (Session["NormalUser"] == null && Session["AdmUser"] == null)
                {

                    <li class="nav-item nav-link m-3 active-1">
                        @Html.ActionLink(@CadastroLogin.Resources.GlobalResource.Portugues, "Change", "Linguagem", new { LanguageAbbreviation = "pt" }, null)
                    </li>
                    <li class="nav-item nav-link m-3 active-1">
                        @Html.ActionLink(@CadastroLogin.Resources.GlobalResource.Ingles, "Change", "Linguagem", new { LanguageAbbreviation = "en" }, null)
                    </li>
                    <li class="nav-item">
                        <a href="~/Authentication/Cadastro" class="nav-link m-2 active-1">@CadastroLogin.Resources.GlobalResource.Cadastrese</a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Authentication/Login" class="nav-link m-2 active-1">@CadastroLogin.Resources.GlobalResource.Entrar</a>
