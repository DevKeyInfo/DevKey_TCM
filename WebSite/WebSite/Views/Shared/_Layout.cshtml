<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar fixed-top mr-5 ml-5" style="background-color: rebeccapurple;">
        <div class="navbar-collapse d-inline p-1 text-white">
            @if (Session["NormalUser"] != null)
            {
                <ul class="nav navbar-nav float-left text-left p-1">
                    <li class="nav-item">@Html.ActionLink("Início", "Index", "Home")</li>
                </ul>
                <ul class="nav navbar-nav float-right text-right p-1">
                    <li class="nav-item">@Html.ActionLink("Sair", "Logout", "Authentication")</li>
                </ul>
            }

            @if (Session["AdmUser"] != null)
            {
                <ul class="nav navbar-nav float-left text-left p-1">
                    <li class="nav-item">@Html.ActionLink("Lista de usuários", "ListarUsuarios", "Home")</li>
                </ul>
                <ul class="nav navbar-nav float-right text-right p-1">
                    <li class="nav-item">@Html.ActionLink("Sair", "Logout", "Authentication")</li>
                </ul>
            }

            @if (Session["NormalUser"] == null && Session["AdmUser"] == null)
            {
                <ul class="nav navbar-nav float-right text-right p-1">
                    <li class="nav-item">@Html.ActionLink("Login", "Login", "Authentication")</li>
                </ul>
                <ul class="nav navbar-nav float-right text-right p-1 mr-3">
                    <li class="nav-item">@Html.ActionLink("Cadastre-se", "Cadastro", "Authentication")</li>
                </ul>
            }
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Todos os direitos reservados</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
